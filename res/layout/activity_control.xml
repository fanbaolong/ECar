<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <com.xieyu.ecar.ui.view.TabHeadView 
        android:id="@+id/headView_control"
        style="@style/layout_match_wrap"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/tv_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="凯迪拉克XTS"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_3"
                android:textSize="@dimen/text_h2" />

            <TextView
                android:id="@+id/tv_car_electricity"
                style="@style/layout_wrap_all"
                android:layout_below="@id/tv_car_name"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:drawableLeft="@drawable/order_electricity"
                android:drawablePadding="@dimen/dimen_5dp"
                android:text="80%"
                android:textColor="@color/text_9"
                android:textSize="@dimen/text_h4" />

            <TextView
                android:id="@+id/tv_car_num"
                style="@style/layout_wrap_all"
                android:layout_below="@id/tv_car_name"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_toRightOf="@id/tv_car_electricity"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:text="苏E123445"
                android:textColor="@color/text_9"
                android:textSize="@dimen/text_h4" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_car" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_car_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/btn_car_open" />

        <ImageView
            android:id="@+id/img_car_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/btn_car_close" />

        <ImageView
            android:id="@+id/img_car_blow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/btn_car_blow" />

        <ImageView
            android:id="@+id/img_car_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/btn_car_back" />
    </LinearLayout>

</LinearLayout>