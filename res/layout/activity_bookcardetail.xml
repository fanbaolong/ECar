<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/layout_match_wrap"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_5dp" >

                <TextView
                    style="@style/layout_wrap_all"
                    android:text="网点详情"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="@color/line_bg" />

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_url"
                        style="@style/layout_wrap_all"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/car" />

                    <LinearLayout
                        style="@style/layout_match_wrap"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_net_name"
                            style="@style/layout_wrap_all"
                            android:singleLine="true"
                            android:text="网点：苏州市工业园区充电网点" />

                        <TextView
                            android:id="@+id/tv_net_address"
                            style="@style/layout_wrap_all"
                            android:singleLine="true"
                            android:text="地址：工业园区南四环西路66-1号" />

                        <TextView
                            android:id="@+id/tv_charge_num"
                            style="@style/layout_wrap_all"
                            android:singleLine="true"
                            android:text="剩余车辆：19/22"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_charge_badnum"
                            style="@style/layout_wrap_all"
                            android:singleLine="true"
                            android:text="营业时间：6:00-18:00"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="@color/line_bg" />
                
                   <TextView
                        android:id="@+id/tv_is_order"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="是否是预约订单：否" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/line_bg" />

                <LinearLayout
                    android:id="@+id/lin_yuyue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_yuyue_quche_time"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="预约取车时间:" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/line_bg" />

                    <TextView
                        android:id="@+id/tv_yuyue_huanche_time"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="预约还车时间:" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/line_bg" />

                    <TextView
                        android:id="@+id/tv_order_sn"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:text="订单编号:" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_bg" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="车辆信息" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_bg" />

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/care_type"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="车子类型：" />

                    <TextView
                        android:id="@+id/tv_car_type"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/moreuser_down"
                        android:text="请选择车辆类型" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_bg" />

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/book_carnum"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="数量：" />

                    <TextView
                        android:id="@+id/tv_car_num"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:text="3辆" />
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/booked"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="当前可预约：" />

                    <TextView
                        android:id="@+id/tv_car_booked"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:text="1辆" />
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/drive_distance"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="满电续航：" />

                    <TextView
                        android:id="@+id/tv_car_drivedistance"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_bg" />

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/max_speed"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="最高时速：" />

                    <TextView
                        android:id="@+id/tv_car_maxspeed"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_bg" />

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/power"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="功率：" />

                    <TextView
                        android:id="@+id/tv_car_power"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:text="50kw" />
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/charge_starttime"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="取车时间：" />

                    <TextView
                        android:id="@+id/tv_car_starttime"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/moreuser_down"
                        android:text="2016-01-05 18:00" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_bg" />

                <LinearLayout
                    style="@style/layout_match_wrap"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/charge_starttime"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:text="还车时间：" />

                    <TextView
                        android:id="@+id/tv_car_endtime"
                        style="@style/layout_match_wrap"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/moreuser_down"
                        android:text="2016-01-06 18:00" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_bg" />

                <TextView
                    android:id="@+id/tv_car_money"
                    style="@style/layout_match_wrap"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:gravity="right"
                    android:text="押金：3000.00"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_booked"
                style="@style/layout_match_wrap"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/btn_yellow_select"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:text="确认租车"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>