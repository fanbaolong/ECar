<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mine_top_relat"
        style="@style/layout_match_wrap"
        android:background="#554241"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_default_height1" >

            <ImageButton
                android:id="@+id/title_left"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/titlebar_btn_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@null"
                android:gravity="left|center_vertical"
                android:minWidth="40dp"
                android:src="@drawable/car_left"
                android:textSize="@dimen/titlebar_btn_text_size" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="200dp"
                android:text="@string/mine"
                android:textColor="@color/white"
                android:textSize="@dimen/titlebar_title_textSize" />
        </RelativeLayout>

        <ImageView
            style="@style/layout_wrap_all"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:contentDescription="@null"
            android:src="@drawable/head" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_78dp" >

            <TextView
                android:id="@+id/my_balance"
                style="@style/layout_wrap_all"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_toLeftOf="@+id/h_view"
                android:text="10820.00"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_my_amt_buttom"
                style="@style/layout_wrap_all"
                android:layout_below="@+id/my_balance"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_toLeftOf="@+id/h_view"
                android:text="押金（冻结）"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:id="@+id/h_view"
                style="@style/v_line"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp" />

            <TextView
                android:id="@+id/freeze_balance"
                style="@style/layout_wrap_all"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_alignBottom="@+id/my_balance"
                android:layout_toRightOf="@+id/h_view"
                android:text="500.00"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                style="@style/layout_wrap_all"
                android:layout_alignBottom="@+id/tv_my_amt_buttom"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_toRightOf="@+id/h_view"
                android:text="当前余额（元）"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_recharge"
        style="@style/mine_text"
        android:drawableRight="@drawable/icon_go"
        android:text="@string/recharge" />

    <View
        style="@style/h_line"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp" />

    <TextView
        android:id="@+id/tv_recharge_detail"
        style="@style/mine_text"
        android:drawableRight="@drawable/icon_go"
        android:text="@string/mingxi" />

</LinearLayout>