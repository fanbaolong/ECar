<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:src="@drawable/order_company" />

    <LinearLayout
        android:id="@+id/ll_center"
        style="@style/layout_wrap_all"
        android:layout_toRightOf="@id/img_logo"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_name"
            style="@style/layout_wrap_all"
            android:text="绿能公司"
            android:textColor="@color/text_6"
            android:textSize="@dimen/text_h3" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/layout_wrap_all"
            android:text="可用余额28888.30元"
            android:textColor="@color/text_9"
            android:textSize="@dimen/text_h4" />
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/img_select"
        style="@style/layout_wrap_all"
        android:src="@drawable/select_yes"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_toRightOf="@id/img_logo"
        android:layout_below="@id/ll_center"
        android:background="@color/line_bg"/>

</RelativeLayout>