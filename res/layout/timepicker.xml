<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timePicker1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/popup_type"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/select_time"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_margin="1dp"
        android:text="2015-9-16 14:30 星期五"
        android:textColor="@color/holo_title"
        android:textSize="18dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/holo_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_margin="1dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <com.gghl.view.wheelview.WheelView
            android:id="@+id/year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.gghl.view.wheelview.WheelView
            android:id="@+id/month"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.gghl.view.wheelview.WheelView
            android:id="@+id/day"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    
    <View 
        android:id="@+id/time_jianju"
        android:layout_width="fill_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal" >
        
        <com.gghl.view.wheelview.WheelView
            android:id="@+id/hour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.gghl.view.wheelview.WheelView
            android:id="@+id/min"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
        <com.gghl.view.wheelview.WheelView
            android:id="@+id/ss"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#B2B2B2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date_yes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="18dp"
            android:textColor="@drawable/date_text"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:layout_weight="1" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#B2B2B2" />

        <TextView
            android:id="@+id/date_no"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:textColor="@drawable/date_text"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18dp"
            android:text="取消"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>