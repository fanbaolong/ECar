<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_bill_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_recharge" />

    <TextView
        android:id="@+id/item_bill_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/item_bill_image"
        android:text="+100.00元"
        android:textSize="@dimen/text_h3" />

    <TextView
        android:id="@+id/item_bill_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_bill_money"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/item_bill_image"
        android:text="2016-01-13 12:00"
        android:textSize="@dimen/text_h4" />

    <TextView
        android:id="@+id/item_bill_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="充值成功"
        android:textColor="@color/holo_title"
        android:textSize="@dimen/text_h3" />

</RelativeLayout>