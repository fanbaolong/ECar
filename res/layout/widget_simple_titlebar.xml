<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_default_height"
    android:background="@color/holo_title" >

    <RelativeLayout
        android:id="@+id/titlebar_content"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_default_height1" >

        <ImageButton
            android:id="@+id/titlebar_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titlebar_btn_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:minWidth="40dp"
            android:textSize="@dimen/titlebar_btn_text_size" />

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="200dp"
            android:textColor="#FFF"
            android:textSize="@dimen/titlebar_title_textSize" />

        <LinearLayout
            android:id="@+id/titlebar_right_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/titlebar_right_second_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/titlebar_btn_height"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/titlebar_text_selector"
                android:textSize="@dimen/text_h4" />

            <Button
                android:id="@+id/titlebar_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/titlebar_btn_height"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/titlebar_text_selector"
                android:textSize="@dimen/titlebar_btn_text_size" />
        </LinearLayout>

        <View
            android:id="@+id/left_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/holo_red_circle_indicator"
            android:visibility="gone" />

        <View
            android:id="@+id/right_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/holo_red_circle_indicator"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>